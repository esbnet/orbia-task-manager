{
  "name": "task-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/db-config.js development && pnpm run prisma:generate && next dev",
    "build": "node scripts/db-config.js production && NODE_ENV=production pnpm run prisma:setup && next build",
    "start": "pnpm run prisma:generate && next start",
    "lint": "next lint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "prisma:generate": "prisma generate",
    "prisma:migrate:deploy": "node scripts/prisma-migrate-deploy.js",
    "prisma:seed": "node scripts/prisma-seed.js",
    "prisma:setup": "pnpm run prisma:generate && pnpm run prisma:migrate:deploy && pnpm run prisma:seed",
    "db:dev": "node scripts/db-config.js development",
    "db:prod": "node scripts/db-config.js production",
    "db:push:dev": "pnpm run db:dev && npx prisma db push",
    "db:push:prod": "pnpm run db:prod && npx prisma db push ",
    "db:studio": "npx prisma studio",
    "db:reset:dev": "pnpm run db:dev && npx prisma db push --force-reset",
    "db:reset:prod": "pnpm run db:prod && npx prisma db push --force-reset",
    "i18n:find": "node scripts/find-hardcoded-strings.js",
    "analyze": "node scripts/analyze-bundle.js",
    "analyze:bundle": "ANALYZE=true npm run build",
    "postinstall": "prisma generate",
    "prepare": "prisma generate"
  },
  "prisma": {
    "seed": "node scripts/prisma-seed.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "7.2.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.2.3",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-popover": "^1.1.13",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.6",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.85.6",
    "@types/recharts": "^2.0.1",
    "@vitejs/plugin-react": "^4.4.1",
    "beasties": "^0.3.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "critters": "^0.0.25",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.506.0",
    "next": "15.3.6",
    "next-auth": "5.0.0-beta.29",
    "next-swagger-doc": "^0.4.1",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "pg": "^8.13.1",
    "recharts": "2.15.4",
    "sonner": "^2.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.28.0",
    "tailwind-merge": "^3.2.0",
    "ts-node": "^10.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^29.7.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-react": "^5.18.0",
    "@vitest/ui": "^3.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "prisma": "7.2.0",
    "react-test-renderer": "^19.1.0",
    "supertest": "^7.1.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.2",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5",
    "vitest": "^3.1.2"
  }
}
